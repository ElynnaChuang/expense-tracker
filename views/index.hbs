<div class="row">
  <div class="sort-bar">
    <form action="/" method="GET">
      <select class="form-select form-select-lg " name="" id="" aria-label="Default select example" onchange="this.form.submit()">
        <option selected>類別</option>
        <option value="1">One</option>
        <option value="2">Two</option>
        <option value="3">Three</option>
      </select>
    </form>
  </div>
</div>

<div class="row mt-3 total-amount-session">
  <div class="col-sm-4 total-amount-title">總金額</div>
  <div class="col-sm total-amount mt-3 mt-sm-0">
    <p class="total-amount-number">{{totalAmount}}</p>
    <p class="total-amount-unit ms-2">NTD</p>
  </div>
</div>

<div class="records-session mt-5">
  {{#each records}}
    <div class="row record-item mb-3">
      <div class="icon"><i class="fa-solid {{this.category.icon}}"></i></div>
      <div class="title">
        <div class="name">{{this.name}}</div>
        <div class="date">{{this.date}}</div>
      </div>
      <div class="amount">{{this.amount}}</div>
      <div class="buttons ms-3">
        <a href="/records/{{this._id}}/edit" class="btn btn-primary">修改</a>
        <form action="/records/{{this._id}}?_method=DELETE" method="POST">
          <button class="btn btn-danger ms-2" type="submit">刪除</button>
        </form>
      </div>
    </div>
  {{/each}}


</div>

<form action="/records/new" method="GET" class="bg-white pt-3 pb-5 new-account-bar">
  <div class="d-grid gap-2 col-12 col-sm-6 mx-auto">
    <button class="btn btn-success new-account-btn" type="submit">新增支出</button>
  </div>
</form>