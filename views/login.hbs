<div class="row">
  <div class="col-sm-8 mx-auto">
    <div class="card card-body login-card py-3 px-4 mt-4">
      <h1 class="mx-auto mb-5 text-primary">登入</h1>
      <form action="/users/login" method="POST">
        <div class="form-group mb-4">
          <label for="email">E-mail</label>
          <input type="email" name="email" id="email" value="{{email}}" class="form-control" placeholder="輸入註冊時的E-mail">
        </div>
        <div class="form-group">
          <label for="password">密碼</label>
          <input type="password" name="password" id="password" class="form-control" placeholder="輸入密碼">
        </div>
        <div class="d-grid mt-5">
          <button type="submit" class="btn btn-primary btn-block">登入</button>
        </div>
      </form>

      <div class="d-flex align-items-center mt-4">
        <hr style="width: 35%" class="me-auto">
        <p class="m-0">其他登入方式</p>
        <hr style="width: 35%" class="ms-auto">
      </div>
      <div class="d-grid mt-3">
        <a href="/auth/facebook" class="btn btn-secondary btn-block">以Facebook登入</a>
      </div>
      <div class="d-flex justify-content-center mt-4">
        沒有帳號？<a href="/users/register">註冊</a>
      </div>

    </div>
  </div>
</div>
